@startuml

entity "UserInfo" {
	* user_id PRIMARY KEY : NUMBER
  	--
  	name : VARCHAR
  	surname : VARCHAR
  	login : VARCHAR
  	password_hash : VARCHAR
}

entity "UserPage" {
	* user_id FOREIGN KEY : NUMBER
  	--
  	posts_url : NUMBER[]
	bio : TEXT
	images_url : VARCHAR[]
	country : VARCHAR
	city : VARCHAR
	privacy_level : NUMBER
	subscribers : NUMBER[]
	subscribed_for : NUMBER[]
}

entity "UserStats" {
  	* user_id FOREIGN KEY : NUMBER
  	--
  	last_login_time : DATETIME
	registered_at : DATETIME
	number_of_comments : NUMBER
	number_of_reactions : NUMBER
	number_of_watched_posts : NUMBER
}

UserInfo ||--o{ UserPage
UserInfo ||--o{ UserStats
  
@enduml